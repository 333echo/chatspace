.chat-main
  .chat-main__main-header
    .chat-main__main-header__left-box
      .current-group
        = @group.name
      .current-member 
        = "Member:"
        - @group.users.each do |user|
          = user.name
    = link_to "Edit", edit_group_path(@group), class: "chat-main__main-header__edit-button"
  .chat-main__timeline
    = render @messages

  .chat-main__post-form
    = form_for [@group, @message] do |f|
      .chat-main__post-form__post-culumn
        = f.text_field :content, class: 'left-part', placeholder: 'type a message'
        = f.label :image, class: 'right-part' do
          = icon('far', 'image', class: 'choose-image')
          = f.file_field :image, class: 'choose-file'
      = f.submit 'Send', class: 'chat-main__post-form__send-button'