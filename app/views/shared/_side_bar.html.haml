.side-bar
	.side-bar__side-header
		.side-bar__side-header__box
			.__side-header__box__user-name
				= current_user.name
			.__side-header__box__icons
				= link_to new_group_path, class: "side-bar__side-header__box__icons" do
					%i.far.fa-edit
				= link_to edit_user_path(current_user.id), class: "side-bar__side-header__box__icons" do
					%i.fas.fa-cog
	.side-bar__groups
		- current_user.groups.each do |group|
			.side-bar__groups__group
				= link_to group_messages_path(group) do
					.group-name
						= group.name
					.group-message
						= group.show_last_message